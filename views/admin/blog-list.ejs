<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <%- include ("../inc/nav")  %> 
    <div class="container mt-5">
        <div class="col-md-12 mt-3">
            <% if (action != "undefined" && action =="edit") { %>
                <div class="alert alert-success">
                    Blog edit edildi
                </div>
            <% } %>
            <% if (action != "undefined" && action =="create") { %>
                <div class="alert alert-success">
                    Taze blog gosuldy
                </div>
            <% } %>
            <% if (action != "undefined" && action =="delete") { %>
                <div class="alert alert-danger">
                    Blog udalit edildi
                </div>
            <% } %>
        </div>
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Text</th>
                    <th scope="col">img</th>
                    <th scope="col">chek_</th>
                    <th scope="col">home_chek</th>
                    <th scope="col">settings</th>
                </tr>
            </thead>
            <tbody>
               <% blogs.forEach(blog => { %>
                <tr>
                    <td scope="row"><%= blog.id %></td>
                    <td><%= blog.title %></td>
                    <td><%- blog.text %></td>
                    <td><img src="/img/<%= blog.img %> " class="img-fluid w-25" alt=""></td>
                    <td><%= blog.chek %></td>
                    <td><%= blog.home %></td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/admin/blogs/edit/<%= blog.id %> ">details</a>
                        <a class="btn btn-sm btn-danger" href="/admin/blogs/delete/<%= blog.id %> ">delete</a>
                    </td>
                </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
    <script src="/js/bootstrap.min.js"></script>
</body>

</html>