<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <%- include ("../../inc/nav")  %> 
    <div class="container mt-5">
        <a href="/admin/category/create" class="btn btn-primary my-3"> Add Category </a>
        <div class="col-md-12 mt-3">            
            <% if (action != "undefined" && action =="create") { %>
                <div class="alert alert-success">
                    Taze category gosuldy
                </div>
            <% } %>
            <% if (action != "undefined" && action =="edit") { %>
                <div class="alert alert-success">
                     category edit edildi
                </div>
            <% } %>
            <% if (action != "undefined" && action =="delete") { %>
                <div class="alert alert-danger">
                    category udalit edildi
                </div>
            <% } %>
        </div>
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Name</th>
                    <th scope="col">settings</th>
                </tr>
            </thead>
            <tbody>
               <% categories.forEach(category => { %>
                <tr>
                    <td scope="row"><%= category.id %></td>
                    <td><%= category.name %></td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/admin/category/edit/<%= category.id %> ">details</a>
                        <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.id %> ">delete</a>
                    </td>
                </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
    <script src="/js/bootstrap.min.js"></script>
</body>

</html>